<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/urban_organic_farming"
            android:textColor="#388E3C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 1. Search Box -->
        <EditText
            android:id="@+id/etSearchPlant"
            android:hint="@string/search_a_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp" />

        <!-- 2. Spinner Dropdown -->
        <Spinner
            android:id="@+id/spinnerZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- 3. Tip of the Day -->
        <TextView
            android:id="@+id/tvDailyTip"
            android:text="@string/tip_water_your_plants_early_in_the_morning"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Main Buttons -->
        <Button android:id="@+id/btnAbout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/what_is_organic_farming" />
        <Button android:id="@+id/btnPlantDB" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/plant_database" />
        <Button android:id="@+id/btnTips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/urban_gardening_tips" />
        <Button android:id="@+id/btnMarkets" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/nearby_organic_markets" />
        <Button android:id="@+id/btnVideo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/video_tutorials" />
        <Button android:id="@+id/btnSoilAwareness" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/soil_pollution_aware" />
        <Button android:id="@+id/btnCommonProblems" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/common_problems_solutions" />
        <Button android:id="@+id/btnContact" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/contact_help" />

        <!-- Featured Plants -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/featured_plants"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Aloe Vera -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/imgAloeVera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/aloe_vera"
                    android:contentDescription="@string/aloe_vera"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text="@string/aloe_vera"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Tulsi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTulsi"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tulsi"
                    android:contentDescription="@string/tulsiplant"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text="@string/tulsi"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
